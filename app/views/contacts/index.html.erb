<div class="container profile">
  <div class="col-md-12">
    <div class="panel panel-profile">
      <div class="panel-heading overflow-h">
        <h2 class="panel-title heading-sm pull-left"><i class="fa fa-vcard-o" aria-hidden="true"></i> Contacts</h2>
        <%= link_to 'New Contact', new_user_contact_path(@user), class:"btn btn-default btn-sm pull-right" %>
      </div>
      <div class="panel-body">
        <%= form_tag root_path, method: 'get' do %>
          <%= text_field_tag :search, params[:search] %>
          <%= submit_tag "Search", name: nil %>
        <% end %>
        <div class="row">
          <% @contacts.each do |contact| %>
            <div class="col-md-4">
              <a href=<%= user_contact_path(@user, contact) %>>
                <div  class="profile-blog blog-border">
                  <%= image_tag contact.avatar.url(:thumb), class: "rounded-x" %>
                  <div class="name">
                    <strong><%= "#{contact.first_name.capitalize} #{contact.last_name.capitalize}" %></strong>
                  </div>
                  <div class="clearfix margin-bottom-20"></div>
                  <ul class="list-group">
                    <li class="list-group-item">
                      <i class="fa fa-envelope-o" aria-hidden="true"></i>
                      <%= contact.email %>
                    </li>
                    <li class="list-group-item">
                      <i class="fa fa-phone" aria-hidden="true"></i>
                      <%= number_to_phone(contact.phone_number) %>
                    </li>
                    <li class="list-group-item">
                      <i class="fa fa-building-o" aria-hidden="true"></i>
                      <%= contact.company.capitalize %>
                    </li>
                  </ul>
                </div>
              </a>
            </div>
          <% end %>
        </div>
        <%= will_paginate @contacts, renderer: BootstrapPagination::Rails %>
      </div>
    </div>
  </div>
</div>
