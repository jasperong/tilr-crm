<div class="container profile">
    <div class="panel panel-profile">
      <div class="panel-heading overflow-h">
        <h2 class="panel-title heading-sm pull-left">
          <% if @contact.first_name %>
            <%= @contact.first_name%>
          <% end %>
          <% if @contact.last_name %>
            <%= @contact.last_name %>
          <% end %>
        </h2>
        <%= link_to 'Delete', user_contact_path(@user, @contact), data: { confirm: "Are you sure?" }, method: :delete, class:"btn btn-danger btn-xs pull-right" %>
        <%= link_to 'Edit', edit_user_contact_path(@user, @contact), class:"btn btn-primary btn-xs pull-right" %>
      </div>
      <div class="panel-body">
        <div class="col-md-4">
          <% if @contact.avatar %>
            <%= image_tag @contact.avatar.url(:square), class: "rounded-x" %>
          <% end %>
        </div>
        <div class="col-md-8">
          <div  class="profile-blog blog-border">
            <div class="clearfix margin-bottom-20"></div>
            <ul class="list-group">
              <li class="list-group-item">
                <i class="fa fa-envelope-o" aria-hidden="true"></i>
                <% if @contact.email %>
                  <%= @contact.email %>
                <% end %>
              </li>
              <li class="list-group-item">
                <i class="fa fa-phone" aria-hidden="true"></i>
                <% if @contact.phone_number %>
                  <%= number_to_phone(@contact.phone_number) %>
                <% end %>
              </li>
              <li class="list-group-item">
                <i class="fa fa-building-o" aria-hidden="true"></i>
                <% if @contact.company %>
                  <%= @contact.company.capitalize %>
                <% end %>
              </li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>


<%= link_to 'Edit', edit_user_contact_path(@user, @contact) %> |
<%= link_to 'Back', user_contacts_path(@user) %>
